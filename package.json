{
  "name": "dynemcp",
  "private": true,
  "scripts": {
    "clean:buildinfo": "rimraf **/*.tsbuildinfo **/tsconfig.build.info",
    "build": "pnpm run clean:buildinfo && turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2",
    "rimraf": "^6.0.1"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
