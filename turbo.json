{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "version": {
      "dependsOn": ["^build"],
      "inputs": ["**/package.json"],
      "outputs": ["**/package.json"]
    },
    "publish": {
      "dependsOn": ["^build", "version"],
      "inputs": ["**/package.json"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "eslint:fix": {
      "dependsOn": ["^eslint:fix"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["transit", "@repo/vitest-config#build"],
      "outputs": ["coverage.json"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    }
  }
}
