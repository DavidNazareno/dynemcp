{
  "name": "@repo/create-dynemcp",
  "description": "Create DyneMCP apps with one command",
  "version": "0.0.0",
  "private": false,
  "type": "module",
  "bin": {
    "create-dynemcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "eslint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "test:watch": "vitest",
    "postbuild": "chmod +x ./dist/index.js"
  },
  "dependencies": {
    "async-sema": "^3.1.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "conf": "^13.0.1",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "inquirer": "^9.2.16",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0",
    "update-check": "^1.5.4",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^20.19.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "execa": "^9.6.0",
    "prettier": "^3.2.5",
    "typescript": "latest",
    "vitest": "^3.0.7",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@vitest/coverage-istanbul": "^3.0.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
