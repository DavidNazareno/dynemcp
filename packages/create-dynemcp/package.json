{
  "name": "@repo/create-dynemcp",
  "version": "1.0.0",
  "description": "Create DyneMCP apps with one command",
  "type": "module",
  "bin": {
    "create-dynemcp": "./dist/index.js"
  },
  "imports": {
    "#create-dynemcp/*": "./src/*"
  },
  "files": [
    "dist",
    "templates"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x ./dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "eslint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "test:watch": "vitest",
    "test:template": "vitest run template.test.ts"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "conf": "^13.0.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.16",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0",
    "update-check": "^1.5.4",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^20.19.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "execa": "^9.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@10.9.0"
}
