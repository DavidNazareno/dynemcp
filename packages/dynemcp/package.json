{
  "name": "@repo/dynemcp",
  "description": "A Model Context Protocol (MCP) server framework",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "eslint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "test:watch": "vitest"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./src/core/index.ts",
      "import": "./dist/core/index.js",
      "default": "./dist/core/index.js"
    },
    "./resources": {
      "types": "./src/resources/index.ts",
      "import": "./dist/resources/index.js",
      "default": "./dist/resources/index.js"
    },
    "./tools": {
      "types": "./src/tools/index.ts",
      "import": "./dist/tools/index.js",
      "default": "./dist/tools/index.js"
    },
    "./prompt": {
      "types": "./src/prompt/index.ts",
      "import": "./dist/prompt/index.js",
      "default": "./dist/prompt/index.js"
    }
  },
  "dependencies": {
    "zod": "^3.22.4",
    "@modelcontextprotocol/sdk": "^1.12.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.0",
    "prettier": "^3.2.5",
    "typescript": "latest",
    "vitest": "^3.0.7",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@vitest/coverage-istanbul": "^3.0.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
