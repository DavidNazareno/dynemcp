{
  "name": "@repo/dynebuild",
  "version": "0.0.0",
  "description": "Build tools for DyneMCP framework",
  "private": false,
  "type": "module",
  "bin": {
    "dynebuild": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x ./dist/bin/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "eslint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "test:watch": "vitest"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./bin": {
      "types": "./src/bin/index.ts",
      "import": "./dist/bin/index.js",
      "default": "./dist/bin/index.js"
    },
    "./builder": {
      "types": "./src/builder/index.ts",
      "import": "./dist/builder/index.js",
      "default": "./dist/builder/index.js"
    },
    "./bundler": {
      "types": "./src/bundler/index.ts",
      "import": "./dist/bundler/index.js",
      "default": "./dist/bundler/index.js"
    }
  },
  "dependencies": {
    "esbuild": "^0.20.1",
    "zod": "^3.22.4",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.0",
    "prettier": "^3.2.5",
    "typescript": "latest",
    "vitest": "^3.0.7",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@vitest/coverage-istanbul": "^3.0.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
