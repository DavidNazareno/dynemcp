{
  "name": "@repo/dynebuild",
  "description": "Build tools for DyneMCP framework",
  "type": "module",
  "bin": {
    "dynebuild": "./dist/bin/cli.js"
  },
  "imports": {
    "#dynebuild/*": "./src/*"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x ./dist/bin/index.js",
    "test:watch": "vitest",
    "test:template": "vitest run template.test.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "eslint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./bin": {
      "types": "./src/bin/index.ts",
      "import": "./dist/bin/index.js",
      "default": "./dist/bin/index.js"
    },
    "./builder": {
      "types": "./src/builder/index.ts",
      "import": "./dist/builder/index.js",
      "default": "./dist/builder/index.js"
    },
    "./bundler": {
      "types": "./src/bundler/index.ts",
      "import": "./dist/bundler/index.js",
      "default": "./dist/bundler/index.js"
    }
  },
  "dependencies": {
    "esbuild": "^0.20.1",
    "zod": "^3.22.4",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.0",
    "typescript": "^5.4.2",
    "vitest": "^1.4.0"
  }
}
