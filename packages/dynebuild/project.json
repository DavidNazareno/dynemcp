{
  "name": "dynebuild",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dynebuild/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/dynebuild/dist",
        "main": "packages/dynebuild/src/index.ts",
        "tsConfig": "packages/dynebuild/tsconfig.lib.json",
        "additionalEntryPoints": ["packages/dynebuild/src/bin/index.ts"],
        "assets": [],
        "format": ["esm"],
        "bundle": true,
        "platform": "node",
        "thirdParty": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "generatePackageJson": true
        }
      }
    },
    "typecheck": {
      "executor": "@nx/js:typecheck",
      "options": {
        "tsConfig": "packages/dynebuild/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": []
}
