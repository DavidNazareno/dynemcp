{
  "name": "@dynemcp/build-dynemcp",
  "version": "0.0.9-canary.20250620T14411",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "dynebuild": "./dist/lib/bin/index.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "nx": {
    "targets": {
      "postbuild": {
        "command": "chmod +x packages/build-dynemcp/dist/lib/bin/index.js",
        "cwd": "packages/build-dynemcp/dist/lib/bin/index.js",
        "parallel": false
      }
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "tslib": "^2.3.0",
    "esbuild": "^0.20.1",
    "zod": "^3.22.4",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.30",
    "typescript": "^5.4.2",
    "vite": "^5.4.0",
    "vitest": "^1.4.0",
    "eslint": "^9.28.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "build",
    "bundler",
    "esbuild",
    "typescript",
    "server"
  ],
  "description": "Advanced build system for DyneMCP projects with optimizations for MCP servers"
}
