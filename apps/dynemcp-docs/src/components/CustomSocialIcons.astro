---
import { getSocialLinks } from '@astrojs/starlight/utils';
const socialLinks = getSocialLinks();
---

<div class="sl-flex social-icons">
  {socialLinks.map(({ href, label, icon }) => (
    <a
      href={href}
      class="sl-button social-icon"
      title={label}
      target="_blank"
      rel="noopener noreferrer"
    >
      <svg class="social-svg" aria-hidden="true">
        <use href={`#sl-social-${icon}`}></use>
      </svg>
      <span class="sr-only">{label}</span>
    </a>
  ))}
</div>

<style>
  .social-icons {
    gap: 0.5rem;
    align-items: center;
  }
  
  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: var(--sl-color-gray-2);
    border: 1px solid var(--sl-color-gray-3);
    transition: all 0.2s ease;
    text-decoration: none;
  }
  
  .social-icon:hover {
    background: var(--dynemcp-primary);
    border-color: var(--dynemcp-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
  }
  
  .social-svg {
    width: 1.25rem;
    height: 1.25rem;
    fill: currentColor;
  }
  
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style> 